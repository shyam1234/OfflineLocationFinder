<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:id="@+id/rel_map_log_row"
    android:background="@color/colorPrimaryLight1"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/imgview_map_log_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_dialog_map"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/lin_map_log_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgview_map_log_row"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_map_log_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textview_map_log_acre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acre:"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textview_map_log_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Modified:"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

    </LinearLayout>
</RelativeLayout>